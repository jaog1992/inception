[mysqld]
user                    = mysql
pid-file               = /run/mysqld/mysqld.pid
socket                  = /run/mysqld/mysqld.sock
port                    = 3306
basedir                 = /usr
datadir                 = /var/lib/mysql
tmpdir                  = /tmp
bind-address            = 0.0.0.0
skip-networking         = false
max_connections         = 100
max_allowed_packet      = 64M
thread_stack            = 192K
thread_cache_size       = 8

[mysql]
default-character-set   = utf8mb4

[mysqldump]
quick
quote-names
max_allowed_packet      = 16M